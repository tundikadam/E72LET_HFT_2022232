<Window x:Class="E72LET_HFT_202232.WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:E72LET_HFT_202232.WpfClient"
        mc:Ignorable="d"
        Title="Game Editor" Height="450" Width="800">
    <Window.DataContext>
        <local:MainWindowViewModel></local:MainWindowViewModel>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <ListBox ItemsSource="{Binding Games}" SelectedItem="{Binding SelectedGame }">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Label  Content="{Binding Name }"></Label>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Grid.Column="1">
            <Button Content="Create Game" Command="{Binding CreateGameCommand }" Margin="10" Padding="10"></Button>
            <Button Content="Delete Game" Command="{Binding DeleteGameCommand }" Margin="10" Padding="10"></Button>
            <Button Content="Update Game" Command="{Binding UpdateGameCommand }" Margin="10" Padding="10"></Button>
        </StackPanel>
    </Grid>
</Window>
